%%-*- mode: erlang -*-

{sub_dirs, ["rel", "deps", "include"]}.

%% rebar deps
{deps, [
    {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git"}},
    {efrisby, ".*", {git, "git@github.com:FabioBatSilva/efrisby.git"}},
    {cowboy, ".*", {git, "git://github.com/ninenines/cowboy", "1.0.4"}}
]}.

%% Misc
{clean_files, [".eunit", "ebin/*.beam", "test/*.beam"]}.

%% Erlang options
{erl_opts, [
    warn_export_all,
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    warnings_as_errors,
    debug_info
]}.
